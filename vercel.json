{
  "version": 2,
  "name": "vqa-smartdoc",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "outputDirectory": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/backend/(.*)",
      "dest": "https://your-render-app.onrender.com/$1",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@vqa-api-url",
    "NEXT_PUBLIC_APP_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "@vqa-api-url",
      "NEXT_PUBLIC_APP_ENV": "production"
    }
  },
  "functions": {
    "app/api/**": {
      "maxDuration": 30
    }
  }
}
