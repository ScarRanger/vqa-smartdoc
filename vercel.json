{
  "version": 2,
  "name": "vqa-smartdoc",
  "routes": [
    { "src": "/proxy/(.*)", "dest": "https://vqa-smartdoc-api.onrender.com/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "NEXT_PUBLIC_APP_ENV": "production"
  },
  "functions": {
    "app/api/**": {
      "maxDuration": 30
    }
  }
}
